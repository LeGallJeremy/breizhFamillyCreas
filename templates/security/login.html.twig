{% extends 'base.html.twig' %} {% block body %}
<div id="wrapper" class="content inner">
    <h3>Formulaire de connexion</h3>

    <form action="{{ path('security_login') }}" method="POST">
        <div class="form-group">
            <input placeholder="Adresse mail" required name="_username" type="text" class="form-control" />
            <input placeholder="Mot de passe" required name="_password" type="password" class="form-control" />
        </div>
        <div class="btns">
            <button class="btns_plus" type="submit" class="">Se connecter</button>
        </div>
        <div>
            <a href="{{ path('security_registration') }}">Pas encore de compte</a>
        </div>
    </form>
</div>
{% endblock %}